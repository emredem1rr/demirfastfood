</head>

<body>
    <!-- Header -->
    <header class="header">
        <a href="/index" class="logo">
            <img src="/images/logoss.png" alt="logo" />
        </a>
        <nav class="navbar">
            <a href="/">Ana Sayfa</a>
            <a href="/menu">Menü</a>
            <a href="/urunler">Ürünler</a>
            <a href="/icecekler">İçecekler</a>
            <a href="#footer">İletişim</a>
            <a href="siparislerim">Siparişlerim</a>
        </nav>
        <div class="buttons">
            <button id="cart-btn">
                <i class="fas fa-shopping-cart"></i>
            </button>
            <button id="menu-btn">
                <i class="fas fa-bars"></i>
            </button>
        </div>

        <!-- Sepet -->
        <div class="cart-items-container">
            <div class="sepet" style="display: flex; height: 80px; align-items: center; gap: 10px;">
                <a href="javascript:void(0);" style="background-color: transparent; color: black; font-size: 15px; width: 250px; margin-top: 10px;">Tutar : <span class="price-value">0.00₺</span></a>
                <a href="/kayit" id="siparis-ver-btn" class="btn" style="background-color: black; color: white; display: flex; justify-content: center; align-items: center; height: 50px; padding: 0 20px;">SİPARİŞ VER</a>

            </div>
        </div>
        
    </header>

    <!-- İletişim ve Form -->
    <section class="contact" id="iletişim">
      <h1 class="heading">MÜŞTERİ <span>BİLGİSİ</span></h1>
      <div class="row" style="height: 480px;">
          <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1513.5491396788395!2d35.78700095415115!3d40.64976393197193!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40876e8befaefb9b%3A0x1d8afc5bd2b65f64!2sAmasya%20%C3%9Cniversitesi%20M%C3%BChendislik%20Fak%C3%BCltesi!5e0!3m2!1str!2str!4v1733137343796!5m2!1str!2str" 
              width="600" 
              height="450" 
              style="border:0; height: 480px;" 
              allowfullscreen="" 
              loading="lazy" 
              referrerpolicy="no-referrer-when-downgrade">
          </iframe>
  
          <form action="siparisolustur" method="POST"> 
              <h3>Müşteri Bilgisi</h3>
          
              <div class="inputbox">
                  <i class="fas fa-user"></i>
                  <input type="text" id="name" name="name" placeholder="Ad Soyad" style="background-color: transparent; margin-left: 20px; margin-bottom: 15px; color: white; text-transform: none;" oninput="validateName(this)" autocomplete="off" required>
              </div>
          
              <div class="inputbox">
                  <i class="fas fa-envelope"></i>
                  <input type="email" name="email" id="email" placeholder="E-mail" style="background-color: transparent;width:570px; margin-left: 20px; margin-bottom: 15px; color: white; text-transform: lowercase;" oninput="validateEmail(this)" autocomplete="off" required>
              </div>
          
              <div class="inputbox">
                  <i class="fas fa-phone"></i>
                  <input type="tel" name="phone" id="phone" placeholder="Telefon numarası" style="background-color: transparent; margin-left: 20px; margin-bottom: 15px; color: white;" oninput="formatPhone(this)" autocomplete="off" required>
              </div>
              
              <div class="inputbox">
                  <i class="fa fa-map-marker"></i>
                  <input type="text" name="adress" id="adress" placeholder="Adres" style="background-color: transparent; margin-left: 20px; margin-bottom: 15px; color: white; width:570px;" autocomplete="off" required>
              </div>
              
              <button type="submit" style="color: white; background-color: black; font-size: 20px;" onclick="sepetiSifirla(event)">Siparişi Tamamla</button>

          </form>
      </div>
  </section>

    <!-- Footer -->
    <section class="footer" id="footer">
